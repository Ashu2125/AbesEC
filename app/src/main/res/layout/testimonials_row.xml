<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#1F1E1E"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="25dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/kirticard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="100dp"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/kirtiimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/kritikarajput1">

            </ImageView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/kirtiname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirti Rajpal\n B.TECH-IT(2010-2014)"
            android:textAlignment="center"
            android:textColor="#787777"
            android:textSize="9sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kirticard"
            tools:layout_editor_absoluteY="35dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/kirtiview"
        android:layout_width="267dp"
        android:layout_height="128dp"
        android:text=" ''As Steve Jobs quoted in his famous graduation speech: You can't connect the dots
   looking forward;you can only connect them looking backward''.joining ABESEC was one such major dot which has endured me with a lifelong career excellence"
        android:textAlignment="textStart"
        android:layout_marginStart="120dp"
        android:textColor="@color/white"
        android:textStyle="bold">

    </TextView>


</androidx.cardview.widget.CardView>